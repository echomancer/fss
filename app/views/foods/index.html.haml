%h1 Listing foods
.row
  .col-xs-12.col-md-12
    %table.table-condensed
      %tr
        %th Name
        %th Producer
        %th Upc
        %th Servings
        %th Serving size
        %th Unit
        %th
        %th
        %th

      - @foods.each do |food|
        %tr
          %td= food.name
          %td= food.producer.name
          %td= food.upc
          %td= food.servings
          %td= food.serving_size
          %td= food.unit.name
          %td
          - if can? :show
            = link_to 'Show', food
          %td
          - if can :update
            = link_to 'Edit', edit_food_path(food)
          %td
          - if can :destroy 
            = link_to 'Destroy', food, :method => :delete, :data => { :confirm => 'Are you sure?' }

.row
  %br
.row
  .col-xs-12.col-md-12
    = link_to 'New Food', new_food_path, :class => 'btn btn-default btn-sm'
